  "content": [
    {
      "type": "header",
      "level": 1,
      "text": "J1P2: Thermal Energy Load Assessment"
    },
    {
      "type": "paragraph",
      "text": "The total thermal energy load of the habitable rooms and conditioned spaces in a sole-occupancy unit of a Class 2 building or a Class 4 part of a building must not exceed the calculated limit."
    },
    {
      "type": "calculation",
      "id": "thermal_energy_load",
      "formula": "(19.3 * HLL + 22.6 * CLL - 8.4) / (Tr + 10.74) - 15",
      "variables": {
        "HLL": {
          "type": "calculation",
          "property": "heating_load_limit"
        },
        "CLL": {
          "type": "calculation",
          "property": "cooling_load_limit"
        },
        "Tr": {
          "type": "climateData",
          "property": "temperature_range"
        }
      },
      "unit": "MJ/mÂ² per annum",
      "description": "Thermal Energy Load Limit calculation"
    },
    {
      "type": "note",
      "text": "Find the annual average daily outdoor temperature range (Tr) for the location.",
      "style": "info"
    }
  ],
