  "title": "J1P2: Total Heating Load Assessment",
  "displayOrder": 4,
  "applicability": {
    "buildingClasses": ["Class_2", "Class_4"],
    "conditions": [
      {
        "type": "buildingClass",
        "operator": "in",
        "value": ["Class_2", "Class_4"]
      }
    ]
  },
  "content": [
    {
      "type": "header",
      "level": 1,
      "text": "J1P2: Total Heating Load Assessment"
    },
    {
      "type": "paragraph",
      "text": "The total heating load of the habitable rooms and conditioned spaces in a sole-occupancy unit of a Class 2 building or a Class 4 part of a building must not exceed the calculated limit."
    },
    {
      "type": "calculation",
      "id": "total_heating_load",
      "formula": "max(4, (0.0044 * HDH - 5.9) * FH)",
      "variables": {
        "HDH": {
          "type": "climateData",
          "property": "heating_degree_hours"
        },
        "FH": {
          "type": "calculation",
          "property": "area_adjustment_factor"
        }
      },
      "unit": "MJ/mÂ² per annum",
      "description": "Total Heating Load Limit calculation"
    },
    {
      "type": "note",
      "text": "The area adjustment factor (FH) is calculated based on the total area of habitable rooms.",
      "style": "info"
    }
  ],
  "metadata": {
    "source": "NCC 2022",
    "lastReviewed": "2024-03-19",
    "reviewedBy": "System",
    "status": "active"
  }
} 