{
  "name": "ncc-compliance-backend",
  "version": "1.0.0",
  "description": "Backend for NCC Compliance Checker",
  "main": "server.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node server.js",
    "start:prod": "cross-env NODE_ENV=production node server.js",
    "dev": "cross-env NODE_ENV=development nodemon --config nodemon.json server.js",
    "start:dev": "cross-env NODE_ENV=development nodemon --config nodemon.json server.js",
    "test": "jest",
    "pm2:start": "chmod +x start-production.sh && ./start-production.sh",
    "pm2:start:simple": "chmod +x start-production-simple.sh && ./start-production-simple.sh",
    "pm2:stop": "pm2 stop all",
    "pm2:restart": "pm2 restart all",
    "pm2:logs": "pm2 logs",
    "pm2:status": "pm2 status",
    "pm2:delete": "pm2 delete all",
    "pm2:rebuild": "npm rebuild sharp pdf-poppler --platform=linux --arch=x64"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "axios": "^1.9.0",
    "bcryptjs": "^2.4.3",
