    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.3",
    "morgan": "^1.10.0",
    "multer": "^2.0.1",
    "ncc-compliance-backend": "file:",
    "openai": "^4.100.0",
    "pdf-parse": "^1.1.1",
    "pdf-poppler": "^0.2.1",
    "sharp": "^0.33.5",
    "swagger-jsdoc": "^6.2.8",
